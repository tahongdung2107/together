<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="8dp"
    android:layout_marginBottom="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="8dp">
    <LinearLayout
        android:layout_width="110dp"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/texviewTeamName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="TeamName"
            android:maxLines="3"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/txtFirstTimeCreated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="From 21/11/2016" />
        </LinearLayout>
    <LinearLayout
        android:id="@+id/linearUser1"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:layout_marginLeft="18dp"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/ImageUser1"
            android:src="@drawable/ic_avatar"
            />
        <TextView
            android:id="@+id/txtUserName1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:text="Dung" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearUser2"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_marginLeft="18dp"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/ImageUser2"
                android:src="@drawable/ic_avatar"
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/txtUserName2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="Dung"
                android:visibility="gone"
                />
            <Button
                android:id="@+id/btnJoinUser2"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:background="@color/green"
                android:gravity="center"
                android:text="JOIN"
                android:visibility="visible"
                android:textColor="@color/white"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearUser3"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_marginLeft="18dp"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/ImageUser3"
                android:src="@drawable/ic_avatar"
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/txtUserName3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="Dung"
                android:visibility="gone"
                />
            <Button
                android:id="@+id/btnJoinUser3"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:background="@color/green"
                android:gravity="center"
                android:text="JOIN"
                android:visibility="visible"
                android:textColor="@color/white"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>